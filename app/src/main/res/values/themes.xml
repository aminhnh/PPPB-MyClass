<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PPPBMyClass" parent="Theme.Material3.DayNight">
    </style>

    <style name="Theme.PPPBMyClass" parent="Base.Theme.PPPBMyClass">
        <item name="colorPrimary">@color/main_grey</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomTextTitle">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="CustomTextTitle2">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/main_grey</item>
        <item name="drawableTint">@color/white</item>
        <item name="titleTextStyle">@style/CustomActionBar.Text</item>
    </style>

    <style name="CustomActionBar.Text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>